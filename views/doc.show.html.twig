{% macro tocTree(tree) %}
    {% for key, node in tree if (key not in ['title', 'id', 'desc']) %}
        <li>
            <a href="#{{ node.id }}">{{ node.title }}</a> {{ node.desc }}
            {% if node|length > 3 %}
                <ul>
                    {{ _self.tocTree(node) }}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
{% endmacro %}
